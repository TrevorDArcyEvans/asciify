@page "/"

@using asciify.core

<PageTitle>asciify</PageTitle>

<style>
  label
  {
    width: 100px;
  }
  
  .imagePreview
  {
    width: 64px;
    height: 64px;
  }
  
  #messageEmbed, #messageExtract
  {
    width: 80%;
  }
  
  .dropzone
  {
    border: 3px dashed steelblue;
    padding: 3rem;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #eee;
    box-shadow: inset 0 0 8px rgba(0,0,0,0.2);
    color: #444;
    font-size: 1.5rem;
    cursor: pointer;
    position: relative;
  }
 
  .dropzone:hover
  {
    background-color: #f3f3f3;
    color: #333;
  }
 
  .dropzone input[type=file]
  {
    position: absolute;
    width: 100%;
    height: 100%;
    opacity: 0;
    cursor: pointer;
  }
 
  .dropzone-drag
  {
    background-color: palegreen;
  }

</style>

<div class="dropzone rounded">
  <InputFile
    OnChange="@(async (e) => await LoadFile(e))"
    accept="image/png,image/gif,image/jpeg"/>
  Upload image
  <img src="@_imgUrl" class="imagePreview">
</div>
<p/>

<label for="sizeSelector">Size:</label>
<select @bind="selectedSize" id="sizeSelector">
  @foreach (var size in AsciiPageSize.DefaultSizes)
  {
    <option value="@size.Name">@size.Name</option>
  }
</select>
<p/>

<button @onclick="DownloadRender" disabled="@(!IsFinishedEmbed)">Download text file</button>
<hr/>

@((MarkupString)_rendered)
